<?xml version="1.0" encoding="UTF-8"?>
<project name="ish.ecletex" default="build.jars" basedir=".">

	<property name="bootclasspath" value=""/>
	<property name="basews" value="${ws}"/>
	<property name="baseos" value="${os}"/>
	<property name="basearch" value="${arch}"/>
	<property name="basenl" value="${nl}"/>
	<property name="javacFailOnError" value="false"/>
	<property name="javacDebugInfo" value="on"/>
	<property name="javacVerbose" value="true"/>
	<property name="javacSource" value="1.3"/>
	<property name="javacTarget" value="1.2"/>
	<property name="compilerArg" value=""/>

	<target name="init" depends="properties">
		<echo> Inicio  </echo>
		<condition property="pluginTemp" value="${temp.folder}/plugins">			
			<isset property="buildTempFolder"/>
		</condition>
		<echo> Inicio  </echo>
		<property name="pluginTemp" value="${basedir}"/>
		<condition property="build.result.folder" value="${pluginTemp}/ecletex">
			<isset property="buildTempFolder"/>
		</condition>
		<property name="build.result.folder" value="${basedir}"/>
		<property name="temp.folder" value="${basedir}/temp.folder"/>
		<property name="plugin.destination" value="${basedir}"/>
	</target>

	<target name="properties" if="eclipse.running">
		<echo> Propriedades </echo>
		<property name="build.compiler" value="org.eclipse.jdt.core.JDTCompilerAdapter"/>
	</target>

	<target name="build.update.jar" depends="init" description="Build the plug-in: ish.ecletex for an update site.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<zip zipfile="${plugin.destination}/ish.ecletex_0.0.4.jar" basedir="${temp.folder}/ish.ecletex_0.0.4" filesonly="false" whenempty="skip" update="false"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="ecletex.jar" depends="init" unless="ecletex.jar" description="Create jar: ecletex.jar.">
		<delete dir="${temp.folder}/ecletex.jar.bin"/>
		<mkdir dir="${temp.folder}/ecletex.jar.bin"/>
		<echo> AKi </echo>
		<!-- compile the source code -->
		<javac destdir="${temp.folder}/ecletex.jar.bin" failonerror="${javacFailOnError}" verbose="${javacVerbose}" debug="${javacDebugInfo}" includeAntRuntime="no" bootclasspath="${bootclasspath}" source="${javacSource}" target="${javacTarget}"		>
			<compilerarg line="${compilerArg}"/>
			<classpath>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.ui_3.0.1/ui.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.core.runtime_3.0.1/runtime.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.osgi_3.0.1/core.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.osgi_3.0.1/console.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.osgi_3.0.1/osgi.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.osgi_3.0.1/resolver.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.osgi_3.0.1/defaultAdaptor.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.osgi_3.0.1/eclipseAdaptor.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.help_3.0.0/help.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.swt_3.0.1/ws/${basews}/swt.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.swt.win32_3.0.1/ws/${basews}/swt.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.swt.win32_3.0.1"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.jface_3.0.0/jface.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.ui.workbench_3.0.1/compatibility.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.ui.workbench_3.0.1/workbench.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.ui.workbench.compatibility_3.0.0/compatibility.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.ui.workbench.compatibility_3.0.0/workbench.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.core.expressions_3.0.0/expressions.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.core.runtime.compatibility_3.0.0/compatibility.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.update.configurator_3.0.0/configurator.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.jface.text_3.0.1/jfacetext.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.text_3.0.1/text.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.ui.editors_3.0.1/editors.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.ui.ide_3.0.1/ide.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.ui.win32_3.0.1/ide.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.ui.win32_3.0.1/workbenchwin32.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.core.resources_3.0.1/resources.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.core.resources.win32_3.0.0/resources.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.core.resources.win32_3.0.0/resources-win32.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.ui.views_3.0.0/views.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.update.core_3.0.1/updatecore.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.update.core.win32_3.0.0/updatecore.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.update.ui_3.0.1/updateui.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.help.base_3.0.1/helpbase.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.apache.lucene_1.3.1/parser.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.apache.lucene_1.3.1/lucene-1.3-final.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.help.appserver_3.0.0/appserver.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.ui.forms_3.0.0/forms.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.ui.workbench.texteditor_3.0.1/texteditor.jar"/>
				<pathelement path="../../../Nomad-Eclipse/plugins/org.eclipse.core.filebuffers_3.0.1/filebuffers.jar"/>
			</classpath>
			<src path="src/"			/>
			</javac>
		<!-- Copy necessary resources -->
		<copy todir="${temp.folder}/ecletex.jar.bin" failonerror="true">
			<fileset dir="src/" excludes="**/*.java, **/package.htm*"			/>
		</copy>
		<echo>Final</echo>
		<mkdir dir="${build.result.folder}"/>
		<jar jarfile="${build.result.folder}/ecletex.jar" basedir="${temp.folder}/ecletex.jar.bin"/>
		<echo>Final</echo>
		<delete dir="${temp.folder}/ecletex.jar.bin"/>
	</target>

	<target name="ecletexsrc.zip" depends="init" unless="ecletexsrc.zip">
		<mkdir dir="${build.result.folder}"/>
		<zip zipfile="${build.result.folder}/ecletexsrc.zip" filesonly="false" whenempty="skip" update="false">
			<fileset dir="src/" includes="**/*.java"			/>
		</zip>
	</target>

	<target name="build.jars" depends="init" description="Build all the jars for the plug-in: ish.ecletex.">
		<available property="ecletex.jar" file="${build.result.folder}/ecletex.jar"/>
		<antcall target="ecletex.jar"/>
	</target>

	<target name="build.sources" depends="init">
		<available property="ecletexsrc.zip" file="${build.result.folder}/ecletexsrc.zip"/>
		<antcall target="ecletexsrc.zip"/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/ish.ecletex_0.0.4"/>
		<copy todir="${destination.temp.folder}/ish.ecletex_0.0.4" failonerror="true">
			<fileset dir="${build.result.folder}" includes="ecletex.jar"			/>
		</copy>
		<copy todir="${destination.temp.folder}/ish.ecletex_0.0.4" failonerror="true">
			<fileset dir="${basedir}" includes="plugin.xml,ecletex.jar,icons/,codeassist/,dictionary/,templates/,wordnet/"			/>
		</copy>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/ish.ecletex_0.0.4"/>
		<copy file="${build.result.folder}/ecletexsrc.zip" todir="${destination.temp.folder}/ish.ecletex_0.0.4" failonerror="false"/>
		<copy todir="${destination.temp.folder}/ish.ecletex_0.0.4" failonerror="false">
			<fileset dir="${basedir}" includes="plugin.xml,build.xml,codeassist/,dictionary/,icons/,src/,templates/,build.properties,.classpath,.project,.template,wordnet/"			/>
		</copy>
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/ish.ecletex_0.0.4"/>
		<copy file="${temp.folder}/ecletex.jar.bin.log" todir="${destination.temp.folder}/ish.ecletex_0.0.4" failonerror="false"/>
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: ish.ecletex of all the zips, jars and logs created.">
		<delete file="${build.result.folder}/ecletex.jar"/>
		<delete file="${build.result.folder}/ecletexsrc.zip"/>
		<delete file="${plugin.destination}/ish.ecletex_0.0.4.jar"/>
		<delete file="${plugin.destination}/ish.ecletex_0.0.4.zip"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running" description="Refresh this folder.">
		<eclipse.convertPath fileSystemPath="C:/Eclipse/workspace/ecletex" property="resourcePath"/>
		<eclipse.refreshLocal resource="${resourcePath}" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init" description="Create a zip containing all the elements for the plug-in: ish.ecletex.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<delete>
			<fileset dir="${temp.folder}" includes="**/*.bin.log"			/>
		</delete>
		<zip zipfile="${plugin.destination}/ish.ecletex_0.0.4.zip" basedir="${temp.folder}" filesonly="true" whenempty="skip" update="false"/>
		<delete dir="${temp.folder}"/>
	</target>

</project>
