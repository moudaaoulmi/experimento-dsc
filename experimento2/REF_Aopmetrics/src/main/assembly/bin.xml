<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>src/main/assembly</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>aopmetrics.sh</include>
        <include>aopmetrics.bat</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target</directory>
      <outputDirectory>docs</outputDirectory>
      <includes>
        <include>javadoc/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>www</directory>
      <outputDirectory>docs</outputDirectory>
      <excludes>
        <exclude>index.html</exclude>
        <exclude>project_tools.html</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>
</assembly>
