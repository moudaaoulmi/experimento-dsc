<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE checkstyle-metadata PUBLIC
"-//eclipse-cs//DTD Check Metadata 1.0//EN"
"http://eclipse-cs.sourceforge.net/dtds/checkstyle-metadata_1_0.dtd">
<checkstyle-metadata>
    <rule-group-metadata name="%Headers.group" priority="300">

        <rule-metadata name="%Header.name" internal-name="Header" parent="TreeWalker">
            <alternative-name internal-name="com.puppycrawl.tools.checkstyle.checks.header.HeaderCheck"/>
            <alternative-name internal-name="com.puppycrawl.tools.checkstyle.checks.HeaderCheck"/>
            <description>%Header.desc</description>
            <property-metadata name="headerFile" datatype="File">
                <description>%Header.headerFile</description>
            </property-metadata>
            <property-metadata name="header" datatype="String">
                <description>%Header.header</description>
            </property-metadata>
            <property-metadata name="ignoreLines" datatype="String">
                <description>%Header.ignoreLines</description>
            </property-metadata>
        </rule-metadata>

        <rule-metadata name="%RegexpHeader.name" internal-name="RegexpHeader" parent="TreeWalker">
            <alternative-name internal-name="com.puppycrawl.tools.checkstyle.checks.header.RegexpHeaderCheck"/>
            <alternative-name internal-name="com.puppycrawl.tools.checkstyle.checks.RegexpHeaderCheck"/>
            <description>%RegexpHeader.desc</description>
            <property-metadata name="headerFile" datatype="File">
                <description>%RegexpHeader.headerFile</description>
            </property-metadata>
            <property-metadata name="header" datatype="String">
                <description>%RegexpHeader.header</description>
            </property-metadata>
            <property-metadata name="multiLines" datatype="String">
                <description>%RegexpHeader.multiLines</description>
            </property-metadata>
        </rule-metadata>

        <rule-metadata name="%CrossLanguageRegexpHeader.name" internal-name="CrossLanguageRegexpHeader" parent="Checker">
            <alternative-name
                internal-name="com.puppycrawl.tools.checkstyle.checks.header.CrossLanguageRegexpHeaderCheck"/>
            <description>%CrossLanguageRegexpHeader.desc</description>
            <property-metadata name="charset" datatype="String">
                <description>name of the file charset</description>
            </property-metadata>
            <property-metadata name="fileExtensions" datatype="String"
                default-value="java, txt, properties, html, jsp, xml, wsdl, js, css, idl, c, cc, cpp, cxx, h, cs, sh, py, bat">
                <description>%CrossLanguageRegexpHeader.fileExtensions</description>
            </property-metadata>
            <property-metadata name="headerFile" datatype="File">
                <description>%CrossLanguageRegexpHeader.headerFile</description>
            </property-metadata>
            <property-metadata name="header" datatype="String">
                <description>%CrossLanguageRegexpHeader.header</description>
            </property-metadata>
            <property-metadata name="multiLines" datatype="String">
                <description>%CrossLanguageRegexpHeader.multiLines</description>
            </property-metadata>
        </rule-metadata>
    </rule-group-metadata>
</checkstyle-metadata>
