<?xml version="1.0" encoding="UTF-8"?>
<project name="compile-abc" default="compile">
	<property name="dir.ehmeter.main" value="../ehmeter" />
	<property name="dir.ehmeter.work" value="${dir.ehmeter.main}/work" />
	<property name="dir.ehmeter.classes" value="${dir.ehmeter.work}/classes" />
	
	<property name="execute.classpath" value="C:\Desenvolvimento\eclipse-mestrado-3\workspace\ABC-Comp\" />
	<property name="execute.classname" value="abc.main.Main" />
	
	<property name="dir.ehmeter.libraries" value="${dir.ehmeter.main}/libs" />
	<property name="dir.lib" value="../lib" />
	<property name="dir.plugins" value="../../../plugins" />
	<property name="dir.src" value="../src" />
	<property name="dir.src2" value="../nls" />
	<property name="dir.bin" value="../bin" />
	<property name="dir.reusable.src" value="C:\Desenvolvimento\eclipse-mestrado-3\workspace\ReusableCode\src" />

	<path id="classpath.common">
		<fileset dir="${dir.lib}">
			<include name="*.jar" />
		</fileset>
		<fileset dir="${dir.ehmeter.libraries}">
			<include name="*.jar" />
		</fileset>
		<fileset dir="${dir.plugins}">
			<include name="*.jar" />
		</fileset>
	</path>

	<target name="compile">
		<echo>.......Before compilation.......</echo>
		<java classname="${execute.classname}" classpath="${execute.classpath}" 
			classpathref="classpath.common" >
			<!-- O primeiro eh o tipo do parametro e o segundo o valor -->
			<arg value="-sourceroots"/>    
			<arg value="${dir.src};${dir.src2}"/>
			<arg value="-d"/>
			<arg value="${dir.bin}"/>
			<arg value="-cp"/>
			<arg value="classpath.common"/>
			<arg value="-source"/>
			<arg value="1.5"/>
		</java>
		<echo>.......After compilation.......</echo>
	</target>

</project>